#details,
#episodes
  max-height inherit
  overflow hidden

  canvas#bg
    position fixed
    top 55px
    left 0
    width 100%
    height 100%

  h4
    line-height 0.9
    margin 0

  h5
    font-size 1.5rem
    font-weight 100
    line-height 0.9
    margin 0

  h6
    font-size smaller
    font-weight 200
    margin-top 0

  p
    line-height 1.1rem

  li.collection-item
    border none
    margin-bottom 0.25rem
    min-height 50px
    opacity 0
    padding-left 1rem
    padding-right 50px
    position relative
    z-index 2

    a[class^=queue]
      border-color transparent white transparent transparent
      border-style solid
      border-width 0 35px 35px 0
      position absolute
      right 4px
      top 4px

      & + i
        font-size 1.2rem
        left inherit
        pointer-events none
        position absolute
        right 6px
        top 4px

  ul.collection
    border none


#details
  $faded-black = rgba(0, 0, 0, 0.5)
  $faded-white = rgba(255, 255, 255, 0.5)

  opacity 0

  &.negative
    a, h4, i, p, .collapsible-header
      color $faded-white

    span.label:not(.red), li.collection-item
      background-color $faded-white
      color $faded-black

    .row.summary
      border-color $faded-white

  &.positive
    a, h4, i, p, .collapsible-header
      color $faded-black

    span.label:not(.red), li.collection-item
      background-color $faded-black
      color $faded-white

    .row.summary
      border-color $faded-black

  h4
    font-size 1.5rem
    font-weight 100
    margin 0
    position relative

  img
    max-width 100%
    position relative
    width 100%

  ul.collapsible
    border none
    box-shadow none
    margin 0

    li
      position relative

      .collapsible-body
        border-bottom thin solid $faded-white

        p
          font-size smaller
          font-weight 200
          padding 0.5rem 0 0.5rem 2.5rem

      .collapsible-header
        border none
        background none
        display inherit
        font-weight 200
        height 2rem
        line-height 2rem
        min-height inherit
        padding 0
        text-transform uppercase

        i
          font-size inherit
          line-height 1.5rem
          margin 0
          text-align right
          width 8px

  ul.collection
    border-radius 3px
    margin 0

  .blurb .col
    padding 0.5rem 0

  .btn-flat
    font-weight 100
    padding 0 1rem
    width 100%

    i
      margin 0

  .container
    width 85%

    > .row:last-child
      margin-bottom 1rem

  .labels
    margin-top 0.25rem
    position relative

  .row
    margin-bottom 0

  .summary
    border-top thin solid $faded-white
    border-bottom thin solid $faded-white
    padding 1rem 0 0.5rem 0

    .s4
      padding 0

    .s8
      // padding-left 0.5rem
      padding-right 0

  .toolbar
    .col
      padding 0

      &:nth-child(2) span
        display block
        height 100%
        margin 0 auto
        text-align center
        width 6rem

    a
      border-radius 0
      padding 0

      &:first-child
        padding-left 1rem

      &:last-child
        padding-right 1rem

      i
        font-size 1rem

  .waves-effect.waves-white .waves-ripple
    background-color $faded-white
