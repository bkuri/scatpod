@import '../colors'

body.details
  &.negative
    section
      a, p
        color $faded-white

      a.queue + i
        color $faded-black

      img
        box-shadow 0 0 1px $faded-white

      span.label:not(.red)
        background-color $faded-white
        color $faded-black

      .collapsible-body, .summary, .toolbar
        border-color $faded-white

      .waves-effect.waves-contrast .waves-ripple
        background-color $faded-white

  &.positive
    section
      a, p
        color $faded-black

      a.queue + i
        color $faded-white

      img
        box-shadow 0 0 1px $faded-black

      span.label:not(.red)
        background-color $faded-black
        color $faded-white

      .collapsible-body, .summary, .toolbar
        border-color $faded-black

      .waves-effect.waves-contrast .waves-ripple
        background-color $faded-black


#details,
#episodes
  max-height inherit
  overflow hidden

  canvas#bg
    position fixed
    top 55px
    left 0
    width 100%
    height 100%

  h4
    line-height 0.9
    margin 0

  h5
    font-size 1.2rem
    font-weight 400
    line-height 0.9
    margin 0

  h6
    font-size smaller
    font-weight 400
    margin-top 0

  p
    line-height 1.1rem

  li.collection-item
    border none
    margin-bottom 0.25rem
    min-height 50px
    opacity 0
    padding-left 1rem
    padding-right 50px
    position relative
    z-index 2

    a[class^=queue]
      border-color transparent
      border-style solid
      border-width 0 35px 35px 0
      position absolute
      right 4px
      top 4px

      & + i
        font-size 1.2rem
        left inherit
        pointer-events none
        position absolute
        right 6px
        top 4px

  ul.collection
    border none


#details
  // opacity 0

  h4
    font-size 1.5rem
    margin 0
    position relative

  img
    margin-left 0.5rem
    max-width 100%
    position relative
    width 100%

  li.collection-item
    background none

  ul.collapsible
    border none
    box-shadow none
    margin 0

    li
      position relative

      .collapsible-body
        border none

        p
          font-size smaller
          font-weight 200
          padding 0.5rem 0 0.5rem 2.5rem

      .collapsible-header
        border none
        background none
        display inherit
        font-weight 400
        height 2rem
        line-height 2rem
        min-height inherit
        padding 0 0.6rem 0 1rem
        text-transform uppercase

        i
          font-size inherit
          line-height 1.5rem
          margin 0
          width 10px

  ul.collection
    border-radius 3px
    margin 0

  .blurb .col
    padding 0.5rem 0

  .btn-flat
    font-weight 400
    padding 0 1rem
    width 100%

    i
      margin 0

  .container
    width 85%

    > .row:last-child
      margin-bottom 1rem

  .container-fluid
    width 100%
    z-index 100

    &.pinned + .container
      margin-top 3rem

    &.pin-top + .container
      margin-top 0.5rem

  .labels
    margin-top 0.25rem
    position relative

  .row
    margin-bottom 0

  .summary
    border-bottom-width thin
    margin-top 0.5rem
    padding 0.5rem 0 0

    .s4
      padding 0

    .s8
      padding 0 1rem

  .toolbar
    top -3rem

    .col
      padding 0

      &:nth-child(2) span
        display block
        height 100%
        margin 0 auto
        text-align center
        width 6rem

    a
      border-radius 0
      padding 0

      &:first-child
        padding-left 1rem

      &:last-child
        padding-right 1rem

      i
        font-size 1rem
