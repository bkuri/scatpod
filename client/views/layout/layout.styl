@import '../../views/colors'

#burger
  top 0
  width 3rem


#fab
  bottom -55px
  right 40px

  a
    line-height 4.7rem

  i
    font-size 1.8rem
    line-height 1


#mobile-nav
  li:hover, li.active
    background-color inherit


#search input
  font-size 2rem
  font-style italic
  font-weight 300
  text-align right
  margin 0
  padding 0.5rem


#send
  position absolute
  right 0
  top 0

  a
    font-weight 300
    padding 0.5rem

  li:hover
    background-color inherit

  .term
    font-size 2rem


html, body
  height 100%
  margin 0
  padding 0
  width 100%

nav
  line-height inherit

  a.button-collapse
    position absolute


.label
  border-radius 2px
  display inline-block
  font-size 0.6rem
  font-weight 500
  line-height 1
  padding 4px 4px 3px 4px
  text-transform uppercase
  vertical-align baseline

  &.red
    margin-right -1px !important


.label:not(:last-child),
.label:not(.red)
  margin-right 2px


.labels
  pointer-events none


.hyphenate
  overflow-wrap break-word
  word-wrap break-word
  hyphens auto


.negative
  &, > a, > h4, > i, > span
    color $faded-white


.positive
  &, > a, > h4, > i, > span
    color $faded-black


.color-1
  &.negative
    a, i, span
      color rgba(255, 255, 255, 0.5)

  &.positive
    a, i, span
      color rgba(0, 0, 0, 0.5)


#mobile-nav li
  &.negative
    a, i, span
      color rgba(255, 255, 255, 0.5)

  &.positive
    a, i, span
      color rgba(0, 0, 0, 0.5)
