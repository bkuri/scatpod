html, body
  height 100%
  margin 0
  padding 0
  width 100%


#burger
  top 0
  width 3rem


#search input
  font-size 2rem
  font-style italic
  font-weight 300
  text-align right
  margin 0
  width calc(100% - 8rem)


#send
  position absolute
  right 0
  top 0

  li:hover
    background-color inherit

  a
    padding 0 15px 0 0
    font-weight 300

  .term
    font-size 2rem


nav a.button-collapse
  position absolute


.hyphenate
  overflow-wrap break-word
  word-wrap break-word
  hyphens auto
