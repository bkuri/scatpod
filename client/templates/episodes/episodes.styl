#details,
#episodes
  max-height inherit
  overflow hidden

  canvas#bg
    position fixed
    top 55px
    left 0
    width 100%
    height 100%
    // z-index 1

  h4
    line-height 0.8
    margin 0
    // text-shadow 0 0 10px black
    // z-index 2

  h5
    line-height 0.9
    margin 0

  h6
    margin-top 0
  /*
  img.background
    filter blur(60px)
    left 0
    position fixed
    top 0
    transform translate3d(0,0,0)
  */
  p
    line-height 1.1rem

  li.collection-item
    min-height 50px
    padding-left 10px
    padding-right 50px
    position relative
    z-index 2

    a[class^=queue]
      border-style solid
      border-width 0 50px 50px 0
      position absolute
      right 0
      top 0

      &.queue
        border-color transparent #F44336 transparent transparent

      &.queued
        border-color transparent #AEEA00 transparent transparent

      & + i
        left inherit
        pointer-events none
        position absolute
        right -1px
        top 3px


#details
  h4
    border-bottom thin solid rgba(255, 255, 255, 0.5)
    font-size 1.5rem
    font-weight 100
    // height 7.5rem
    margin 0
    padding-bottom 0.25rem
    position relative
    // text-shadow 0 0 10px black
    // z-index 2

  img
    max-width 100%
    position relative

  ul.collection
    border-radius 3px
    margin 1rem 0

  ul.collapsible
    border none
    box-shadow none
    margin 0

    li
      position relative

      .collapsible-body
        border-bottom thin solid rgba(255, 255, 255, 0.5)

        p
          font-size smaller
          font-weight 200
          padding 0.5rem 0 0.5rem 2.5rem

      .collapsible-header
        border none
        background none
        display inherit
        font-weight 200
        height 2rem
        line-height 2rem
        padding 0
        text-transform uppercase

        i
          font-size inherit
          line-height 1.5rem
          margin 0
          opacity 0.7
          text-align right
          width 8px

  .blurb .col
    padding 0

  .btn-flat
    font-weight 100
    padding 0 1rem
    width 100%

    i
      margin 0

  .container
    width 85%

    > .row
      margin-bottom 0.5rem

      &:last-child
        margin-bottom 1rem

  .labels
    margin-top 0.25rem
    position relative

  .summary
    .row
      margin-bottom 0

    .s4
      padding 0

    .s8
      padding-left 0.5rem
      padding-right 0

  .toolbar
    // border-bottom thin solid rgba(255, 255, 255, 0.5)

    .col
      padding 0

    a
      padding 0

  .waves-effect.waves-white .waves-ripple
    background-color rgba(255, 255, 255, 0.5)
