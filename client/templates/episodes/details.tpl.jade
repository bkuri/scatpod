#details
  .container
    .row.toolbar
      .col.s4
        a.btn-flat.waves-effect.waves-white.white-text.btn-back(href='#')
          span
            i.white-text.mdi-navigation-arrow-back
            | Back

      .col.s4
        a.btn-flat.waves-effect.waves-white.white-text.btn-play(href='#')
          span
            i.white-text.mdi-av-play-arrow
            | Sample

      .col.s4
        if isTracking cid
          a.btn-flat.waves-effect.waves-white.white-text.btn-leave(href='#')
            span.right
              i.white-text.mdi-content-remove
              | Remove
        else
          a.btn-flat.waves-effect.waves-white.white-text.btn-join(href='#')
            span.right
              i.white-text.mdi-content-add
              | Add

    .row.summary
      .col.s4
        img(src=img)

      .col.s8
        h4.white-text= title

        .labels
          if isExplicit collectionExplicitness
            span.label.red.white-text explicit
          each genres
            span.label.white.black-text= this

    .row.blurb
      .col.s12
        ul.collapsible(data-collapsible='accordion')
          each accordionElements
            li
              .collapsible-header.white-text.waves-effect.waves-white
                i($dyn=icon)
                | #{title}

              .collapsible-body
                p.white-text= body

    .row.list
      +episodes
